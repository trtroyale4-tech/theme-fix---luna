      },
      {
        "type": "text",
        "id": "author",
        "label": "Enter Author Name",
         "default":"John"
      }
      
            ]
          }
        ],
  "presets": [
      {
        "name": "Reviews Testimonial",
        "category": "Review",
        "blocks": [
          {
            "type": "Review"
        }
        ]
      }
    ]

}
