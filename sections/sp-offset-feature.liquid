            {% render block %}
          </div>
        {% endif %}
  
        {% if block.type == 'headline' %}
  
          <style>
          #sp-ofs-{{ section.id }} #sp-headline-{{ forloop.index }} {
            text-align: {{ block.settings.alignment }};
          }
          </style>
          
           <h1 id="sp-headline-{{ forloop.index }}">{{ block.settings.content }}</h1>
        {% endif %}
  
        {% if block.type == 'paragraph' %}
  
          <style>
          #sp-ofs-{{ section.id }} #sp-paragraph-{{ forloop.index }} {
            text-align: {{ block.settings.alignment }};
          }
          </style>
          
           <p id="sp-paragraph-{{ forloop.index }}">{{ block.settings.content }}</p>
        {% endif %}
  
        {% if block.type == 'content' %}
  
          <style>
          #sp-ofs-{{ section.id }} #sp-content-{{ forloop.index }} {
            text-align: {{ block.settings.alignment }};
          }
          </style>
          
           <{{ block.settings.tag }} id="sp-content-{{ forloop.index }}">{{ block.settings.content }}</{{ block.settings.tag }}>
        {% endif %}
  
        {% if block.type == 'richtext' %}
          <style>
          #sp-ofs-{{ section.id }} #sp-content-{{ forloop.index }}, #sp-ofs-{{ section.id }} #sp-content-{{ forloop.index }} * {
            text-align: {{ block.settings.alignment }};
          }
          </style>
          <div id="sp-content-{{ forloop.index }}">
          {{ block.settings.richtext }}
          </div>
        {% endif %}
  
        {% if block.type == 'button' %}
          <style>
            #sp-ofs-{{ section.id }} #sp-button-{{ forloop.index }} .sp-button {
              display: inline-block;
              padding: {{ block.settings.button_padding_tb }}px {{ block.settings.button_padding_lr }}px;
              background-image: {{ block.settings.button_background_color }};
              border-radius: {{ block.settings.button_border_radius }}px;
              border: {{ block.settings.button_border_size }}px solid {{ block.settings.button_border_color }};
              color: {{ block.settings.button_text_color }};
              font-size: {{ block.settings.button_text_size }}px;
              text-decoration: none;
              cursor: pointer;
              text-shadow: none;
              transition: .25s all;
              margin: 0 5px 0 0;
            }
      
            #sp-ofs-{{ section.id }} #sp-button-{{ forloop.index }} .sp-button-sec {
              background-image: {{ block.settings.button_background_color_2 }};
              color: {{ block.settings.button_text_color_2 }};
            }
      
            #sp-ofs-{{ section.id }} #sp-button-{{ forloop.index }} .sp-button * {
              color: {{ block.settings.button_text_color }};
            }
          </style>
      
