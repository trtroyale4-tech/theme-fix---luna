            <a class="sp-button" href="{{ block.settings.cta_link }}">{{ block.settings.cta }}</a>
            {% if block.settings.show_secondary_button %}
              <a class="sp-button sp-button-sec" href="{{ block.settings.cta_link_2 }}">{{ block.settings.cta_2 }}</a>
            {% endif  %}
          </p>
        {% endif %}
  
      {% endfor %}
      
