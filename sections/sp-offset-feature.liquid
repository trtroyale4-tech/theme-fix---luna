<style>

  {{ section.settings.text_font | font_face }}
  {{ section.settings.headline_font | font_face }}

  {% assign short_id = section.id | slice: -3, 3 %}

  #sp-ofs-{{ section.id }}.sp-ofs-wrap p,
  #sp-ofs-{{ section.id }}.sp-ofs-wrap p a {
    font-size: {{ section.settings.text_size }}px;
    font-family: {{ section.settings.text_font.family }}, {{ section.settings.text_font.fallback_families }};
    font-weight: {{ section.settings.text_font.weight }};
    {% if section.settings.text_line_height != 'inherit' %}line-height: {{ section.settings.text_line_height }};{% endif %}
    color: {{ section.settings.text_color }};
  }

  #sp-ofs-{{ section.id }}.sp-ofs-wrap p {
    color: {{ section.settings.text_color }};
    padding: 0;
    margin: 0 0 {{ section.settings.element_spacing }}px 0;
  }

  #sp-ofs-{{ section.id }}.sp-ofs-wrap h1,
  #sp-ofs-{{ section.id }}.sp-ofs-wrap h2,
  #sp-ofs-{{ section.id }}.sp-ofs-wrap h3,
  #sp-ofs-{{ section.id }}.sp-ofs-wrap h4,
  #sp-ofs-{{ section.id }}.sp-ofs-wrap h5 {
    font-size: {{ section.settings.headline_size }}px;
    font-family: {{ section.settings.headline_font.family }}, {{ section.settings.headline_font.fallback_families }};
    font-weight: {{ section.settings.headline_font.weight }};
    {% if section.settings.headline_line_height != 'inherit' %}line-height: {{ section.settings.headline_line_height }};{% endif %}
    color: {{section.settings.headline_color}};
    padding: 0;
    margin: 0 0 {{ section.settings.element_spacing }}px 0;
  }

  #sp-ofs-{{ section.id }}.sp-ofs-wrap h2 {
    font-size: {{ section.settings.headline_size | minus:5 }}px;
  }

  #sp-ofs-{{ section.id }}.sp-ofs-wrap h3 {
    font-size: {{ section.settings.headline_size | minus:10 }}px;
  }

  #sp-ofs-{{ section.id }}.sp-ofs-wrap h4 {
    font-size: {{ section.settings.headline_size | minus:15 }}px;
  }

  #sp-ofs-{{ section.id }}.sp-ofs-wrap h5 {
    font-size: {{ section.settings.headline_size | minus:20 }}px;
  }

  #sp-ofs-{{ section.id }}.sp-ofs-wrap {
    position: relative;
    display: grid;
    align-items: center;
    box-sizing: border-box;
    background-image: {{section.settings.background_color}};
    width: 100%;
    min-height: {{ section.settings.height }}px;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
    overflow: hidden;
  }

  #sp-ofs-{{ section.id }} .sp-ofs-grid {
    position: relative;
    margin: 0 auto;
    max-width: {{ section.settings.max_width }}px;
  }
  

  #sp-ofs-{{ section.id }} .sp-ofs-bg {
    position: absolute;
    top: 0;
    {% if section.settings.text_location == 'right' %}
    left: 0;
    {% else %}
    right: 0;
    {% endif %}
    object-fit: cover;
    width: 50%;
    height: 100%;
    display: block;
  }

  @media only screen and (max-width: 800px) {
    #sp-ofs-{{ section.id }} .sp-ofs-bg {
      width: 100%;
    }
  }

  #sp-ofs-{{ section.id }} .sp-ofs-column-content {
    border-radius: {{ section.settings.container_radius }}px;
    background-image: {{ section.settings.container_background_color }};
    {% if section.settings.container_shadow %}box-shadow: 0 0 5px 0 rgba(0,0,0,0.20);{% endif %}
    margin: 0;
    padding: {{ section.settings.container_padding }}px;
  }

  @media only screen and (min-width: 801px) {
    #sp-ofs-{{ section.id }}.sp-ofs-left .sp-ofs-column-content {
      width: 60%;
      margin-right: 40%;
    }
    
    #sp-ofs-{{ section.id }}.sp-ofs-right .sp-ofs-column-content {
      width: 60%;
      margin-left: 40%;
    }
  }

  @media only screen and (max-width: 800px) {
    #sp-ofs-{{ section.id }} .sp-ofs-column-content {
      margin: 0;
      width: 100%;
    }
  }

  @media only screen and (max-width: 900px) {
    #sp-ofs-{{ section.id }} .sp-ofs-grid {
      display: block;
    }
  }

  @media only screen and (max-width: 900px) {
    #sp-ofs-{{ section.id }} .sp-ofs-column {
      overflow: hidden;
    }
  }

  #sp-ofs-{{ section.id }} .sp-ofs-grid p:last-child {
    margin: 0 !important;
    padding: 0;
  }
</style>

