  #sp-{{ section.id }}.sp-modal {
    padding: 25px;
    border: 1px solid #ddd;
    border-radius: 10px;
    max-width: 600px;
  }

  #sp-{{ section.id }} .sp-modal-close {
    cursor: pointer;
    position: absolute;
    top: 10px;
    right: 10px;
    z-index: 1;
  }

  #sp-{{ section.id }}.sp-modal p,
  #sp-{{ section.id }}.sp-modal p a {
    font-size: {{ section.settings.text_size }}px;
    {% if section.settings.override_fonts %}
    font-family: {{ section.settings.text_font.family }}, {{ section.settings.text_font.fallback_families }};
    font-weight: {{ section.settings.text_font.weight }};
    {% endif %}
    {% if section.settings.text_line_height != 'inherit' %}line-height: {{ section.settings.text_line_height }};{% endif %}
  }

  #sp-{{ section.id }}.sp-modal h2 {
    font-size: {{ section.settings.headline_size }}px;
    {% if section.settings.override_fonts %}
    font-family: {{ section.settings.headline_font.family }}, {{ section.settings.headline_font.fallback_families }};
    font-weight: {{ section.settings.headline_font.weight }};
    {% endif %}
    {% if section.settings.headline_line_height != 'inherit' %}line-height: {{ section.settings.headline_line_height }};{% endif %}
  }

  #sp-{{ section.id }}.sp-modal {
    background-image: {{section.settings.background_color}};
    width: 100%;
  }

  #sp-{{ section.id }} .sp-grid {
    position: relative;
    margin: 0 auto;
    max-width: 100%;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
  }

  @media only screen and (max-width: 900px) {
    #sp-{{ section.id }} .sp-column {
      padding: 5px 0;
    }

    #sp-{{ section.id }} .sp-column-text {
      display: none;
    }

    #sp-{{ section.id }} .sp-mobile-text {
      display: block;
    }
  }

  #sp-{{ section.id }} .sp-grid h2, .sp-grid p {
    text-align: left;
    margin: 0 0 25px 0;
    padding: 0;
    color: {{ section.settings.text_color }};
  }

  #sp-{{ section.id }} .sp-grid h2 {
    color: {{ section.settings.headline_color }};
  }

  #sp-{{ section.id }} .sp-grid p:last-child {
    margin: 0;
    padding: 0;
  }

  #sp-{{ section.id }} .sp-form {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 10px;
  }

  #sp-{{ section.id }} .sp-form .sp-span-cols {
    grid-column: 1 / 3;
  }

  #sp-{{ section.id }} button {
    display: inline-block;
    padding: 15px 25px;
    background-image: {{section.settings.button_background_color}};
    border-radius: 4px;
    color: {{section.settings.button_text_color}};
    text-decoration: none;
    cursor: pointer;
    font-weight: bold;
    text-shadow: none;
    transition: .25s all;
    border: none;
  }

  #sp-{{ section.id }} .sp-field label {
    display: block;
    font-size: 11pt;
    padding: 0;
    margin: 0 0 2.5px 0;
    color: {{ section.settings.label_color }};
  }

  #sp-{{ section.id }} .sp-field input[type=text],
  #sp-{{ section.id }} .sp-field input[type=email] {
    box-sizing: border-box;
    display: block;
    border: none;
    border-bottom: 2px solid #ddd;
    padding: 5px 5px 10px 0;
    width: 100%;
    outline: none;
  }

  #sp-{{ section.id }} .sp-field select {
    box-sizing: border-box;
    display: block;
    border: none;
    border-bottom: 2px solid #ddd;
    padding: 5px 5px 10px 0;
    width: 100%;
    outline: none;
  }

  .sp-check {
    display: block;
    margin-bottom: 5px;
  }

  #sp-{{ section.id }} .sp-field input:focus,
  #sp-{{ section.id }} .sp-field input:focus-visible,
  #sp-{{ section.id }} .sp-field select:focus,
  #sp-{{ section.id }} .sp-field select:focus-visible {
    border-bottom: 2px solid {{ section.settings.highlight_color }};
    outline: none;
    outline-color: transparent;
    outline-style: none;
    box-shadow: none;
  }

