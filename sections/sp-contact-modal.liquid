<dialog id="sp-{{ section.id }}" class="sp-modal">

  <a class="sp-modal-close"><svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 -960 960 960" width="24"><path d="m256-200-56-56 224-224-224-224 56-56 224 224 224-224 56 56-224 224 224 224-56 56-224-224-224 224Z"/></svg></a>

  <div class="sp-grid sp-grid-{{ section.settings.headline_location }}">

    <div class="sp-column">

      <h2 class="heading">{{ section.settings.headline }}</h2>
      <p>{{ section.settings.content }}</p>
      
      <!-- form -->
      {% assign form_id = 'sp-form-' | append: short_id %}
      {% form 'contact', id: form_id, class: 'sp-form' %}

        {% if section.settings.subject != '' %}
          <input type="hidden" name="contact[ subject]" value="{{ section.settings.subject }}">
        {% endif %}

        <!-- success / error messages -->
        {% if form.posted_successfully? %}
          <p class="sp-success sp-span-cols">{{ section.settings.success_message }}</p>
        {% elsif form.errors %}
        <p class="sp-error sp-span-cols">
          {{ section.settings.error_message }}
          {{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}
        </p>
        {% endif %}
        <!-- form body -->
        {% for block in section.blocks %}

          {% if block.type == 'email' %}
            <div class="sp-field {% if block.settings.span_columns %}sp-span-cols{% endif %}">
              <label for="{{ block.settings.id }}" {% if block.settings.visually_hide == true %}style="display:none;"{% endif %}>{{ block.settings.label }}</label>
              <input
                autocomplete="email"
                type="email"
                id="{{ block.settings.id }}"
                name="contact[email]"
                spellcheck="false"
                autocapitalize="off"
                value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
                {% if block.settings.required %}
                  aria-required="true"
                  required
                {% endif %}
                {% if form.errors contains 'email' %}
                  aria-invalid="true"
                  aria-describedby="ContactForm-email-error"
                {% endif %}
                placeholder="{{ block.settings.placeholder }}">
            </div>
          {% endif %}

          {% if block.type == 'name' %}
            <div class="sp-field {% if block.settings.span_columns %}sp-span-cols{% endif %}">
              <label for="{{ block.settings.id }}" {% if block.settings.visually_hide == true %}style="display:none;"{% endif %}>{{ block.settings.label }}</label>
              <input
                type="text"
                id="name"
                name="contact[name]"
                spellcheck="false"
                autocapitalize="off"
                value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
                {% if block.settings.required %}
                  aria-required="true"
                  required
                {% endif %}
                placeholder="{{ block.settings.placeholder }}">
            </div>
          {% endif %}

          {% if block.type == 'text' %}
            <div class="sp-field {% if block.settings.span_columns %}sp-span-cols{% endif %}">
              <label for="{{ block.settings.id }}" {% if block.settings.visually_hide == true %}style="display:none;"{% endif %}>{{ block.settings.label }}</label>
              <input
                type="text"
                id="{{ block.settings.id }}"
                name="contact[{{ block.settings.label }}]"
                spellcheck="false"
                autocapitalize="off"
                value=""
                {% if block.settings.required %}
                  aria-required="true"
                  required
                {% endif %}
                placeholder="{{ block.settings.placeholder }}">
            </div>
          {% endif %}

          {% if block.type == 'single-select' %}
            {% assign options = block.settings.options | split: "," %}
            <div class="sp-field {% if block.settings.span_columns %}sp-span-cols{% endif %}">
              <label for="{{ block.settings.id }}" {% if block.settings.visually_hide == true %}style="display:none;"{% endif %}>{{ block.settings.label }}</label>
              <select
                id="{{ block.settings.id }}"
                name="contact[{{ block.settings.label }}]">
                {% for option in options %}
                  <option value="{{ option }}">{{ option }}</option>
                {% endfor %}
              </select>
            </div>
          {% endif %}

        {% if block.type == 'multiple-select' %}
            {% assign options = block.settings.options | split: "," %}
            <div class="sp-field {% if block.settings.span_columns %}sp-span-cols{% endif %}">
              <label for="{{ block.settings.id }}" {% if block.settings.visually_hide == true %}style="display:none;"{% endif %}>{{ block.settings.label }}</label>
              {% for option in options %}
                <label class="sp-check">
                <input type="checkbox"
                  id="{{ block.settings.id }}"
                  name="contact[{{ block.settings.label }}_{{ forloop.index }}]" value="{{ option }}">{{ option }}</label>
              {% endfor %}
              
            </div>
          {% endif %}

        
        {% endfor %}

        <div class="sp-actions sp-span-cols">
          <button type="submit" class="sp-button">
            {{ section.settings.button_text }}
          </button>
        </div>
      {% endform %}
      <!-- /form -->

    </div>
    <!-- /col -->

  </div>
  <!-- /grid -->
  
</dialog>
<!-- /dialog -->

<script>
  const sai_cf_dialog = document.querySelector(`#sp-{{ section.id }}`);
  const sai_cf_dialog_close = document.querySelector("#sp-{{ section.id }} .sp-modal-close");

  // show -> handle after load
  document.addEventListener("DOMContentLoaded", function(){
    const sai_cf_show = document.querySelectorAll("[href='{{ section.settings.modal_target }}']");

    // show
    for(var x=0; x<sai_cf_show.length; x++) {
      sai_cf_show[x].addEventListener("click", (e) => {
        sai_cf_dialog.showModal();
        e.preventDefault();
      });
    }
  });

  // close
  sai_cf_dialog_close.addEventListener("click", (e) => {
    sai_cf_dialog.close();
    e.preventDefault();
  });

  // show in design mode
  if(Shopify) {
    if(Shopify.designMode) {
      sai_cf_dialog.showModal();
    }
  }

  // show for url
  if(location.href.indexOf("{{ section.settings.modal_target }}") != -1) {
      sai_cf_dialog.showModal();
  }

  if(location.href.indexOf("#sp-cfm-form") != -1) {
    sai_cf_dialog.showModal();
  }
  
</script>

