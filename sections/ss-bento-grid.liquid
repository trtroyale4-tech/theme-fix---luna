              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
</div>

{% schema %}
  {
    "name": "SS - Bento Grid",
    "settings": [
      {
        "type": "header",
        "content": "Body Settings"
      },
      {
        "type": "select",
        "id": "body_columns",
        "label": "Body Columns - Desktop",
        "default": "4",
        "options": [
          {
            "label": "6",
            "value": "6"
          },
          {
            "label": "4",
            "value": "4"
          }
        ]
      },
      {
        "type": "range",
        "id": "body_gap",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "Body Gap",
        "default": 16
      },
