{%- liquid 
  assign padding_horizontal = section.settings.padding_horizontal
  assign padding_horizontal_mobile = section.settings.padding_horizontal_mobile
  assign padding_top = section.settings.padding_top
  assign padding_bottom = section.settings.padding_bottom
  assign border_color = section.settings.border_color
  assign border_thickness = section.settings.border_thickness
  assign margin_top = section.settings.margin_top
  assign margin_bottom = section.settings.margin_bottom
  assign background_color = section.settings.background_color
  assign background_gradient = section.settings.background_gradient
  assign full_width = section.settings.full_width
  assign item_width = section.settings.item_width
  assign lazy = section.settings.lazy

  assign body_columns = section.settings.body_columns
  assign body_gap = section.settings.body_gap
  assign body_gap_mobile = section.settings.body_gap_mobile
  assign body_bg_image = section.settings.body_bg_image
  assign item_padding_vertical = section.settings.item_padding_vertical
  assign item_padding_vertical_mobile = section.settings.item_padding_vertical_mobile
  assign item_padding_horizontal = section.settings.item_padding_horizontal
  assign item_padding_horizontal_mobile = section.settings.item_padding_horizontal_mobile
  assign item_radius = section.settings.item_radius
  assign item_border_thickness = section.settings.item_border_thickness
  assign item_opacity = section.settings.item_opacity
  assign item_shadow = section.settings.item_shadow
  
-%}

{%- style -%}
  
  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
    background-color:{{ background_color }};
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }

  .bento-body-{{ section.id }} {
    display: grid;
    align-items: start;
    grid-template-columns: 1fr;
    row-gap: {{ body_gap_mobile }}px;
  }

  .bento-item-{{ section.id }} {
    display: flex;
    align-items: center;
    gap: 20px;
    position: relative;
    height: 100%;
    border-radius: {{ item_radius }}px;
    padding: {{ item_padding_vertical_mobile }}px {{ item_padding_horizontal_mobile }}px;
    text-decoration: none;
    overflow: hidden;
    backdrop-filter: opacity({{ item_opacity | times: 100 }}%);
  }
  
  @media(min-width: 1024px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
    }
    
    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }

    .bento-body-{{ section.id }} {
      gap: {{ body_gap }}px;
      grid: auto-flow dense auto / repeat({{ body_columns }},minmax(0,1fr));
    }

    .bento-item-{{ section.id }} {
      padding: {{ item_padding_vertical }}px {{ item_padding_horizontal }}px;
    }
  }
  
{%- endstyle -%}

{% unless full_width %}
  <style>
    .section-{{ section.id }}-settings {
      max-width: {{ item_width }}rem;
    }
  </style>
{% endunless %}

{% if body_bg_image != blank %}
  <style>
    .bento-{{ section.id }} {
      background-image: url('{{ body_bg_image | image_url }}');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
    }
  </style>
{% else %}
  <style>
    .bento-{{ section.id }} {
      background-image: {{ background_gradient }};
    }
  </style>
{% endif %}

{% if item_shadow %}
  <style>
    .bento-item-{{ section.id }} {
      box-shadow: rgba(0, 0, 0, 0.08) 0px 4px 12px;
    }
  </style>
{% endif %}

{% for block in section.blocks %}
  <style>

    {{  block.settings.heading_font | font_face: font_display: 'swap' }}
    {{  block.settings.text_font | font_face: font_display: 'swap' }}
    {{  block.settings.button_font | font_face: font_display: 'swap' }}

    .bento-item-{{ block.id }} {
      border: {{ item_border_thickness }}px solid {{ block.settings.item_border_color }};
      grid-area: span min(2, 2) / span min(2,2);
    }

    .bento-content-{{ block.id }} {
      width: 100%;
    }

    .bento-heading-{{ block.id }} {
      width: 100%;
      text-align: {{ block.settings.heading_align_mobile }};
    }
  
    .bento-heading-{{ block.id }} * {
      margin: 0;
      font-size: {{ block.settings.heading_size_mobile }}px;
      color: {{ block.settings.item_heading_color }};
      line-height: {{ block.settings.heading_height }}%;
      text-transform: unset;
      word-break: break-word;
    }

    .bento-text-{{ block.id }} {
      width: 100%;
      margin-top: {{ block.settings.text_mt | times: 0.75 | round: 0 }}px;
      text-align: {{ block.settings.text_align_mobile }};
    }
  
    .bento-text-{{ block.id }} * {
      margin: 0;
      font-size: {{ block.settings.text_size_mobile }}px;
      color: {{ block.settings.item_text_color }};
      line-height: {{ block.settings.text_height }}%;
      text-transform: unset;
      word-break: break-word;
    }

    .bento-text-{{ block.id }} p {
      min-height: 10px;
    }

    .bento-text-{{ block.id }} p:not(:first-child) {
      margin-top: 10px;
    }

    .bento-button-{{ block.id }} {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
      width: 100%;
      max-width: {{ block.settings.button_width_mobile }}px;
      margin: 0;
      margin-top: {{ block.settings.button_mt_mobile }}px;
      font-size: {{ block.settings.button_size_mobile }}px;
      color: {{ block.settings.button_color }};
      line-height: {{ block.settings.button_height }}%;
      text-align: center;
      text-transform: unset;
      text-decoration: none;
      padding: {{ block.settings.button_padding_vertical_mobile }}px {{ block.settings.button_padding_horizontal_mobile }}px;
      border-radius: {{ block.settings.button_radius }}px;
      transition: all 0.25s ease 0s;
      position: relative;
      font-weight: 700;
      z-index: 2;
    }
  
    .bento-button-{{ block.id }}:hover {
      color: {{ block.settings.button_hover_color }};
      transition: all 0.25s ease 0s;
    }
  
    .bento-button-{{ block.id }} svg {
      width: 14px;
      height: 14px;
    }
  
    .bento-button-{{ block.id }} svg path {
      fill: {{ block.settings.button_color }};
      transition: all 0.25s ease 0s;
    }
  
    .bento-button-{{ block.id }}:hover svg path {
      fill: {{ block.settings.button_hover_color }};
      transition: all 0.25s ease 0s;
    }
    
    .bento-image-{{ block.id }} {
      overflow: hidden;
      border-radius: {{ block.settings.image_radius }}px;
      border: {{ block.settings.image_border_thickness }}px solid {{ block.settings.image_border_color }};
    }

    .bento-image-inner-{{ block.id }} {
      margin: 0px auto;
      width: 100%;
      max-width: {{ block.settings.image_width_mobile }}%;
    }

    .bento-image-{{ block.id }} img,
    .bento-image-{{ block.id }} svg {
      display: block;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    @media( min-width: 1024px) {
      .bento-item-{{ block.id }} {
        grid-area: span {{ block.settings.row_width }} / span {{ block.settings.column_width }};
      }

      .bento-heading-{{ block.id }} {
        text-align: {{ block.settings.heading_align }};
      }
  
      .bento-heading-{{ block.id }} * {
        font-size: {{ block.settings.heading_size }}px;
      }

      .bento-text-{{ block.id }} {
        margin-top: {{ block.settings.text_mt }}px;
        text-align: {{ block.settings.text_align }};
      }
  
      .bento-text-{{ block.id }} * {
        font-size: {{ block.settings.text_size }}px;
      }

      .bento-button-{{ block.id }} {
        margin-top: {{ block.settings.button_mt }}px;
        max-width: {{ block.settings.button_width }}px;
        padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
        font-size: {{ block.settings.button_size }}px;
      }

      .bento-image-inner-{{ block.id }} {
        max-width: {{ block.settings.image_width }}%;
      }
    }
    
  </style>

  {% if block.settings.heading_custom %}
    <style>
      .bento-heading-{{ block.id }} * {
        font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
        font-weight: {{ block.settings.heading_font.weight }};
        font-style: {{ block.settings.heading_font.style }};
      }
    </style>
  {% endif %}

  {% if block.settings.text_custom %}
    <style>
      .bento-text-{{ block.id }} * {
        font-family: {{ block.settings.text_font.family }}, {{ block.settings.text_font.fallback_families }};
        font-weight: {{ block.settings.text_font.weight }};
        font-style: {{ block.settings.text_font.style }};
      }
    </style>
  {% endif %}

  {% if block.settings.button_custom %}
    <style>
      .bento-button-{{ block.id }} {
        font-family: {{ block.settings.button_font.family }}, {{ block.settings.button_font.fallback_families }};
        font-weight: {{ block.settings.button_font.weight }};
        font-style: {{ block.settings.button_font.style }};
      }
    </style>
  {% endif %}

  {% if block.settings.button_align_mobile == "center" %}
    <style>
     .bento-button-{{ block.id }} {
        margin-left: auto;
        margin-right: auto;
      } 
    </style>
  {% elsif block.settings.button_align_mobile == "right" %}
    <style>
     .bento-button-{{ block.id }} {
        margin-left: auto;
      } 
    </style>
  {% endif %}
  
  {% if block.settings.button_align == "center" %}
    <style>
      @media(min-width: 1024px) {
       .bento-button-{{ block.id }} {
          margin-left: auto !important;
          margin-right: auto !important;
        } 
      }
    </style>
  {% elsif block.settings.button_align == "right" %}
    <style>
      @media(min-width: 1024px) {
       .bento-button-{{ block.id }} {
          margin-left: auto !important;
          margin-right: 0px !important;
        } 
      }
    </style>
  {% else %}
    <style>
      @media(min-width: 1024px) {
       .bento-button-{{ block.id }} {
          margin-left: 0px !important;
          margin-right: 0px !important;
        } 
      }
    </style>
  {% endif %}
  
  {% if block.settings.button_style == "non_outline" or block.settings.button_style == "non_outline_arrow" %}
    <style>
      .bento-button-{{ block.id }} {
        background-color: {{ block.settings.button_bg_color }};
      }
  
      .bento-button-{{ block.id }}:hover {
        background-color: {{ block.settings.button_bg_hover_color }};
      }
    </style>
  {% elsif block.settings.button_style == "outline" or block.settings.button_style == "outline_arrow" %}
    <style>
      .bento-button-{{ block.id }} {
        background-color: {{ block.settings.button_bg_color }};
        border: {{ block.settings.button_border_thickness }}px solid {{ block.settings.button_border_color }};
      }
  
      .bento-button-{{ block.id }}:hover {
        background-color: {{ block.settings.button_bg_hover_color }};
        border: {{ block.settings.button_border_thickness }}px solid {{ block.settings.button_border_hover_color }};
      }
    </style>
  {% endif %}

  {% if block.settings.image_ratio_mobile == "portrait" %}
    <style>
      .bento-image-inner-{{ block.id }} {
       aspect-ratio: 9.6/14; 
      }
    </style>
  {% elsif block.settings.image_ratio_mobile == "landscape" %}
    <style>
      .bento-image-inner-{{ block.id }} {
       aspect-ratio: 12/9; 
      }
    </style>
  {% elsif block.settings.image_ratio_mobile == "square" %}
    <style>
      .bento-image-inner-{{ block.id }} {
       aspect-ratio: 12/12; 
      }
    </style>
  {% else%}
    <style>
      .bento-image-inner-{{ block.id }} {
       aspect-ratio: auto; 
      }
    </style>
  {% endif %}
  
  {% if block.settings.image_ratio == "portrait" %}
    <style>
      @media(min-width: 1024px) {
       .bento-image-inner-{{ block.id }} {
         aspect-ratio: 9.6/14; 
        } 
      }
    </style>
  {% elsif block.settings.image_ratio == "landscape" %}
    <style>
      @media(min-width: 1024px) {
        .bento-image-inner-{{ block.id }} {
         aspect-ratio: 12/9; 
        }
      }
    </style>
  {% elsif block.settings.image_ratio == "square" %}
    <style>
      @media(min-width: 1024px) {
        .bento-image-inner-{{ block.id }} {
         aspect-ratio: 12/12; 
        }
      }
    </style>
  {% else%}
    <style>
      @media(min-width: 1024px) {
        .bento-image-inner-{{ block.id }} {
         aspect-ratio: auto; 
        }
      }
    </style>
  {% endif %}

  {% if block.settings.image_position_mobile == "top" %}
    <style>
      .bento-item-{{ block.id }} {
        flex-direction: column;
      }
      
      .bento-image-{{ block.id }} {
        flex: 0 1 auto;
      }

      .bento-content-{{ block.id }} {
        flex: 0 1 auto;
      }
    </style>
  {% elsif block.settings.image_position_mobile == "bottom" %}
    <style>
      .bento-item-{{ block.id }} {
        flex-direction: column;
      }

      .bento-image-{{ block.id }} {
        flex: 0 1 auto;
        order: 2;
      }

      .bento-content-{{ block.id }} {
        flex: 0 1 auto;
        order: 1;
      }
    </style>
  {% elsif block.settings.image_position_mobile == "right" %}
    <style>
      .bento-image-{{ block.id }} {
        order: 2;
        flex: 1 0;
      }

      .bento-content-{{ block.id }} {
        order: 1;
        flex: 1 0;
      }
    </style>
    {% else %}
    <style>
      .bento-image-{{ block.id }} {
        order: 1;
        flex: 1 0;
      }

      .bento-content-{{ block.id }} {
        order: 2;
        flex: 1 0;
      }
    </style>
  {% endif %}

  {% if block.settings.image_position == "top" %}
    <style>

      @media(min-width: 1024px) {
        .bento-item-{{ block.id }} {
          flex-direction: column;
        }
  
        .bento-image-{{ block.id }} {
          order: 1;
          flex: 0 1 auto;
        }
  
        .bento-content-{{ block.id }} {
          order: 2;
          flex: 0 1 auto;
        } 
      }
    </style>
  {% elsif block.settings.image_position == "bottom" %}
    <style>
      @media(min-width: 1024px) {
        .bento-item-{{ block.id }} {
          flex-direction: column;
        }
  
        .bento-image-{{ block.id }} {
          order: 2;
          flex: 0 1 auto;
        }
  
        .bento-content-{{ block.id }} {
          order: 1;
          flex: 0 1 auto;
        }
      }
    </style>
  {% elsif block.settings.image_position == "right" %}
    <style>
      @media(min-width: 1024px) {
        .bento-item-{{ block.id }} {
          flex-direction: row;
        }

        .bento-image-{{ block.id }} {
          order: 2;
          flex: 1 0;
        }
  
        .bento-content-{{ block.id }} {
          order: 1;
          flex: 1 0;
        }
      }
    </style>
  {% else %}
    <style>
      @media(min-width: 1024px) {
        .bento-item-{{ block.id }} {
          flex-direction: row;
        }

        .bento-image-{{ block.id }} {
          order: 1;
          flex: 1 0;
        }
  
        .bento-content-{{ block.id }} {
          order: 2;
          flex: 1 0;
        }
      }
    </style>
  {% endif %}

  {% if block.settings.item_heading_gradient != blank %}
    <style>
      .bento-heading-{{ block.id }} {
        background: {{ block.settings.item_heading_gradient }};
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent; 
      }
    </style>
  {% endif %}
  
{% endfor %}

