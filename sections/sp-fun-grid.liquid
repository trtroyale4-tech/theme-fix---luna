<div id="sp-{{ section.id }}" class="sp-section" sp-section>

<div class="sp-container" sp-container>

  {% if section.settings.headline != '' or section.settings.text != '' %}
    <div class="sp-headline" sp-column>
      {% if section.settings.headline != '' %}<h2>{{ section.settings.headline }}</h2>{% endif %}
      {% if section.settings.text != '' %}<p>{{ section.settings.text }}</p>{% endif %}
    </div>
    {% endif %}

  <div class="sp-grid">

    {% for block in section.blocks %}
      <div class="sp-col" sp-column>
        {% if block.settings.background_image %}
        <img class="sp-img" src="{{ block.settings.background_image | image_url: width: 600 }}">
        {% else %}
        <img class="sp-img"  src="data:image/svg+xml,%3C%3Fxml version='1.0' encoding='UTF-8'%3F%3E%3Csvg version='1.1' viewBox='0 0 500 250' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Crect x='2' y='2' width='496' height='496' fill='%23D8D8D8' stroke='%23D8D8D8' stroke-width='4'/%3E%3C/g%3E%3C/svg%3E">
        {% endif %}
        <div class="sp-cover"></div>
        <div class="sp-content">
          {% if block.settings.headline %}<h2>{{ block.settings.headline }}</h2>{% endif %}
          {% if block.settings.text %}<p>{{ block.settings.text }}</p>{% endif %}
          {% if block.settings.cta %}<p><a class="sp-cta" href="{{ block.settings.cta_link }}">{{ block.settings.cta }}</a></p>{% endif %}
        </div>
      </div>
      <!-- /.sp-col -->

      {% endfor %}

  </div>
  <!-- /.sp-grid -->
  
</div>
<!-- /.sp-container -->

</div>
<!-- /.sp-section -->

