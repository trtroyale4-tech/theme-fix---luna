<!-- this should have blocks for text headlines etc -->
<style>
  {% if section.settings.override_fonts %}
    {{ section.settings.text_font | font_face }}
    {{ section.settings.headline_font | font_face }}
  {% endif %}

  #sp-{{ section.id }} p {
    font-size: {{ section.settings.text_size }}px;
    {% if section.settings.override_fonts %}
      font-family: {{ section.settings.text_font.family }}, {{ section.settings.text_font.fallback_families }};
      font-weight: {{ section.settings.text_font.weight }};
    {% endif %}
    color: {{ section.settings.text_color }};
    {% if section.settings.text_line_height != 'inherit' %}line-height: {{ section.settings.text_line_height }};{% endif %}
    margin: 0;
    padding: 0 0 {{ section.settings.element_spacing }}px 0;
    text-align: {{ section.settings.text_alignment }};
  }

  #sp-{{ section.id }} p:last-child {
    padding: 0;
  }

  #sp-{{ section.id }} h2 {
    font-size: {{ section.settings.headline_size }}px;
    {% if section.settings.override_fonts %}
      font-family: {{ section.settings.headline_font.family }}, {{ section.settings.headline_font.fallback_families }};
      font-weight: {{ section.settings.headline_font.weight }};
    {% endif %}
    color: {{ section.settings.headline_color }};
    {% if section.settings.headline_line_height != 'inherit' %}line-height: {{ section.settings.headline_line_height }};{% endif %}
    margin: 0;
    padding: 0 0 {{ section.settings.element_spacing }}px 0;
    text-align: {{ section.settings.text_alignment }};
  }

  #sp-{{ section.id }} {
    background-image: {{ section.settings.background_color }};
    width: 100%;
  }

  #sp-{{ section.id }} .sp-grid {
    position: relative;
    margin: 0 auto;
    max-width: {{ section.settings.max_width }}px;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
  }

{% if section.settings.pill_alignment == 'left' %}
  #sp-{{ section.id }} .sp-grid {
    display: grid;
    grid-template-columns: {{ section.settings.pill_thickness }}px 1fr;
    gap: 20px;
  }
{% elsif section.settings.pill_alignment == 'right' %}
  #sp-{{ section.id }} .sp-grid {
    display: grid;
    grid-template-columns: 1fr {{ section.settings.pill_thickness }}px;
    gap: {{ section.settings.element_spacing }}px;
  }
{% endif %}

{% if section.settings.pill_alignment == 'center' %}
  #sp-{{ section.id }} span.sp-headline-pill {
    width: 75px;
    height: {{ section.settings.pill_thickness }}px;
    background-color: {{ section.settings.pill_color }};
    border-radius: {{ section.settings.pill_radius }}px;
    content: "";
    padding: 0;
    display: inline-block;
  }
{% else %}
  #sp-{{ section.id }} span.sp-headline-pill {
    width: {{ section.settings.pill_thickness }}px;
    height: 100%;
    background-color: {{ section.settings.pill_color }};
    border-radius: {{ section.settings.pill_radius }}px;
    content: "";
    padding: 0;
    display: inline-block;
  }
{% endif %}

</style>


<div id="sp-{{ section.id }}" class="sp-section" sp-section>
  <div class="sp-grid" sp-container>
    
    {% if section.settings.pill_alignment == 'left' %}
      <span class="sp-headline-pill"></span>
    {% endif %}

    <div class="sp-column" sp-column>
      
      <div class="sp-headline">
        {% if section.settings.headline != '' %}<h2>{{ section.settings.headline }}</h2>{% endif %}
        {% if section.settings.text != '' %}<p>{{ section.settings.text }}</p>{% endif %}
        {% if section.settings.pill_alignment == 'center' %}
          <p><span class="sp-headline-pill"></span></p>
        {% endif %}
      </div>
      
    </div>

    {% if section.settings.pill_alignment == 'right' %}
      <span class="sp-headline-pill"></span>
    {% endif %}
    
  </div>
</div>

