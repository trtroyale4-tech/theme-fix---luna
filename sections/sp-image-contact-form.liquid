    grid-column: 2;
    grid-row: 1;
  }

  #sp-{{ section.id }} .sp-grid-right .sp-column-image {
    grid-column: 2;
    grid-row: 1;
  }
  
  #sp-{{ section.id }} .sp-grid-right .sp-column-text {
