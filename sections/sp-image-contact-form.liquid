<div id="sp-{{ section.id }}" class="sp-section" sp-section>

  <div class="sp-container" sp-container>

    <div class="sp-grid sp-grid-{{ section.settings.image_location }}" sp-grid>

      <div class="sp-column sp-column-image">
        {% if section.settings.image %}
          <img src="{{ section.settings.image | image_url: width: 600 }}"
            srcset="{{ section.settings.image | image_url: width: 600 }} 600w, {{ section.settings.image | image_url: width: 1100 }} 1100w">
        {% else %}
            <img src="data:image/svg+xml,%3C%3Fxml version='1.0' encoding='UTF-8'%3F%3E%3Csvg version='1.1' viewBox='0 0 500 500' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Crect x='2' y='2' width='496' height='496' fill='%23D8D8D8' stroke='%23D8D8D8' stroke-width='4'/%3E%3C/g%3E%3C/svg%3E">
        {% endif %}
        </div>
      <div class="sp-column sp-column-text">
        <h2 class="heading">{{ section.settings.headline }}</h2>
        <p>{{ section.settings.content }}</p>
      
        <!-- form -->
        {% assign form_id = 'sp-form-' | append: short_id %}

        {% form 'contact', id: form_id, class: 'sp-form' %}

          {% if section.settings.subject != '' %}
            <input type="hidden" name="contact[ subject]" value="{{ section.settings.subject }}">
            {% endif %}

          <!-- success / error messages -->
          {% if form.posted_successfully? %}
            <p class="sp-success sp-span-cols">{{ section.settings.success_message }}</p>
          {% elsif form.errors %}
          <p class="sp-error sp-span-cols">
            {{ section.settings.error_message }}
            {{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}
          </p>
          {% endif %}
          <!-- form body -->
          {% for block in section.blocks %}

            {% if block.type == 'email' %}
              <div class="sp-field {% if block.settings.span_columns %}sp-span-cols{% endif %}">
                <label for="{{ block.settings.id }}" {% if block.settings.visually_hide == true %}style="display:none;"{% endif %}>{{ block.settings.label }}</label>
                <input
                  autocomplete="email"
                  type="email"
                  id="{{ block.settings.id }}"
                  name="contact[email]"
                  spellcheck="false"
                  autocapitalize="off"
                  value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
                  {% if block.settings.required %}
                    aria-required="true"
                    required
                  {% endif %}
                  {% if form.errors contains 'email' %}
                    aria-invalid="true"
                    aria-describedby="ContactForm-email-error"
                  {% endif %}
                  placeholder="{{ block.settings.placeholder }}">
              </div>
            {% endif %}

            {% if block.type == 'name' %}
              <div class="sp-field {% if block.settings.span_columns %}sp-span-cols{% endif %}">
                <label for="{{ block.settings.id }}" {% if block.settings.visually_hide == true %}style="display:none;"{% endif %}>{{ block.settings.label }}</label>
                <input
                  type="text"
                  id="name"
                  name="contact[name]"
                  spellcheck="false"
                  autocapitalize="off"
                  value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
                  {% if block.settings.required %}
                    aria-required="true"
                    required
                  {% endif %}
                  placeholder="{{ block.settings.placeholder }}">
              </div>
            {% endif %}

            {% if block.type == 'text' %}
              <div class="sp-field {% if block.settings.span_columns %}sp-span-cols{% endif %}">
                <label for="{{ block.settings.id }}" {% if block.settings.visually_hide == true %}style="display:none;"{% endif %}>{{ block.settings.label }}</label>
                <input
                  type="text"
                  id="{{ block.settings.id }}"
                  name="contact[{{ block.settings.label }}]"
                  spellcheck="false"
                  autocapitalize="off"
                  value=""
                  {% if block.settings.required %}
                    aria-required="true"
                    required
                  {% endif %}
                  placeholder="{{ block.settings.placeholder }}">
              </div>
            {% endif %}

            {% if block.type == 'single-select' %}
              {% assign options = block.settings.options | split: "," %}
              <div class="sp-field {% if block.settings.span_columns %}sp-span-cols{% endif %}">
                <label for="{{ block.settings.id }}" {% if block.settings.visually_hide == true %}style="display:none;"{% endif %}>{{ block.settings.label }}</label>
                <select
                  id="{{ block.settings.id }}"
                  name="contact[{{ block.settings.label }}]">
                  {% for option in options %}
                    <option value="{{ option }}">{{ option }}</option>
                  {% endfor %}
                </select>
              </div>
            {% endif %}

          {% if block.type == 'multiple-select' %}
              {% assign options = block.settings.options | split: "," %}
              <div class="sp-field {% if block.settings.span_columns %}sp-span-cols{% endif %}">
                <label for="{{ block.settings.id }}" {% if block.settings.visually_hide == true %}style="display:none;"{% endif %}>{{ block.settings.label }}</label>
                {% for option in options %}
                  <label class="sp-check">
                  <input type="checkbox"
                    id="{{ block.settings.id }}"
                    name="contact[{{ block.settings.label }}_{{ forloop.index }}]" value="{{ option }}">{{ option }}</label>
                {% endfor %}
                
              </div>
            {% endif %}

          
          {% endfor %}

          <div class="sp-actions sp-span-cols">
            <button type="submit" class="sp-button">
              {{ section.settings.button_text }}
            </button>
          </div>
        {% endform %}
        <!-- /form -->

      </div>
      <!-- /col -->

    </div>
    <!-- /grid -->

  </div>
  <!-- /container -->
  
</div>
<!-- /section -->

