    display: block;
  }

  #sp-{{ section.id }} .sp-container .sp-image {
    position: relative;
  }

  #sp-{{ section.id }} .sp-item {
    position: absolute;
  }

  #sp-{{ section.id }} .sp-item .sp-caption {
    position: absolute;
    visibility: visible;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    transition: .25s all ease;
    opacity: 1;
    z-index: 2;
  }

  #sp-{{ section.id }} .sp-item .sp-caption:hover {
    transform: translateY(-2px);
  }

  #sp-{{ section.id }} .sp-item .sp-caption[data-pointer="top left"]:hover,
  #sp-{{ section.id }} .sp-item .sp-caption[data-pointer="top right"]:hover {
    transform: translateY(2px);
  }

  #sp-{{ section.id }} .sp-item  .sp-caption a,
  #sp-{{ section.id }} .sp-item  .sp-caption a:visited {
    text-decoration: none;
  }

  #sp-{{ section.id }} .sp-item  .sp-caption p {
    padding: 5px 10px 5px 10px;
    margin: 0;
    text-align: left;
    white-space: nowrap;
  }


  #sp-{{ section.id }} .sp-item .sp-caption p {
    font-size: {{ section.settings.caption_text_size }}px;
  }
  
  #sp-{{ section.id }} .sp-image {
    display: block;
    margin: 0;
    padding: 0;
    position: relative;
    width: 100%;
    aspect-ratio: {{ section.settings.media_aspect_ratio }};
    border-radius: {{ section.settings.media_radius }}px;
    {% if section.settings.media_shadow %}
      width: calc(100% - 10px);
      box-shadow: 0 0 5px 0 rgba(0,0,0,0.20);
      margin: 5px;
    {% endif %}
  }

  #sp-{{ section.id }} .sp-image img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    margin: 0;
    padding: 0;
    border-radius: {{ section.settings.media_radius }}px;
  }

  /* buttons */
  #sp-{{ section.id }} .sp-button {
    display: inline-block;
    padding: {{ section.settings.button_padding_tb }}px {{ section.settings.button_padding_lr }}px;
    background-image: {{ section.settings.button_background_color }};
    border-radius: {{ section.settings.button_border_radius }}px;
    border: {{ section.settings.button_border_size }}px solid {{ section.settings.button_border_color }};
    color: {{ section.settings.button_text_color }};
    font-size: {{ section.settings.button_text_size }}px;
    text-decoration: none;
    cursor: pointer;
    text-shadow: none;
    transition: .25s all;
    margin: 0 5px 0 0;
  }

