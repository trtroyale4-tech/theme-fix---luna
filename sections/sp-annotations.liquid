    text-align: {{ section.settings.text_alignment }};
  }

  @media only screen and (max-width: 800px) {
    #sp-{{ section.id }} .sp-headline * {
      text-align: {{ section.settings.mobile_text_alignment }};
    }
  }

  #sp-{{ section.id }} .sp-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    align-content: center;
    gap: {{ section.settings.gap }}px;
  }

  @media only screen and (min-width: 801px) {

  {% if section.settings.display == 'stacked' %}
    #sp-{{ section.id }} .sp-grid {
      grid-template-columns: 1fr;
    }
  {% endif %}

  {% if section.settings.display == 'left' %}
    #sp-{{ section.id }} div:first-child{
      grid-column: 2;
      grid-row: 1;
    }
    
    #sp-{{ section.id }} div:last-child {
      grid-column: 1;
      grid-row: 1;
    }
  {% endif %}
