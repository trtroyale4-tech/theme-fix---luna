<div id="sp-{{ section.id }}" class="sp-wrap" sp-wrap>

<div class="sp-container" sp-container>

  <div class="sp-grid">

    <div class="sp-headline">
      {% if section.settings.headline != "" %}<h2>{{ section.settings.headline }}</h2>{% endif %}
      {% if section.settings.content != "" %}<p>{{ section.settings.content }}</p>{% endif %}

      {% if section.settings.show_buttons %}
      <p>
        <a class="sp-button" href="{{ section.settings.cta_link }}">{{ section.settings.cta }}</a>
        {% if section.settings.show_secondary_button %}
          <a class="sp-button sp-button-sec" href="{{ section.settings.cta_link_2 }}">{{ section.settings.cta_2 }}</a>
        {% endif  %}
      </p>
      {% endif %}
    </div>

    <div class="sp-image-wrapper">

      <div class="sp-image">

        {% if section.settings.image %}
          <img
            src="{{ section.settings.image | image_url: width: 600 }}"
            srcset="{{ section.settings.image| image_url: width: 600 }} 600w,
              {{ section.settings.image | image_url: width: 800 }} 800w,
              {{ section.settings.image | image_url: width: 1000 }} 1000w,
              {{ section.settings.image | image_url: width: 1100 }} 1100w">
        {% else %}
          <img 
            src="data:image/svg+xml,%3C%3Fxml version='1.0' encoding='UTF-8'%3F%3E%3Csvg version='1.1' viewBox='0 0 500 500' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Crect x='2' y='2' width='100%' height='100%' fill='%23C8C8C8' stroke='%23D8D8D8' stroke-width='4'/%3E%3C/g%3E%3C/svg%3E">
        {% endif %}

        {% for block in section.blocks %}
          <div class="sp-item" style="top: {{ block.settings.offset_v }}%; left: {{ block.settings.offset_h }}%;">

            {% if block.settings.offset_h > 50 %}
              {% assign style_h = "right: 0;" %}
            {% else %}
              {% assign style_h = "left: 0; "%}
            {% endif %}

            {% if block.settings.offset_v > 50 %}
              {% assign style_v = "bottom: 0;" %}
            {% else %}
              {% assign style_v = "top: 0; "%}
            {% endif %}

            <style>
              #sp-{{ section.id }} .sp-item #sp-caption-{{ forloop.index }} p {
                background: {{ block.settings.background_color }};
                color: {{ block.settings.text_color }} !important;
              }

              #sp-{{ section.id }} .sp-item #sp-caption-{{ forloop.index }}[data-pointer="bottom left"] {
                border-left: 2px solid {{ block.settings.background_color }};
              }
            
              #sp-{{ section.id }} .sp-item #sp-caption-{{ forloop.index }}[data-pointer="bottom right"] {
                border-right: 2px solid {{ block.settings.background_color }};
              }
            
              #sp-{{ section.id }} .sp-item #sp-caption-{{ forloop.index }}[data-pointer="top left"] {
                border-left: 2px solid {{ block.settings.background_color }};
              }
            
              #sp-{{ section.id }} .sp-item #sp-caption-{{ forloop.index }}[data-pointer="top right"] {
                border-right: 2px solid {{ block.settings.background_color }};
              }

              #sp-{{ section.id }} .sp-item #sp-caption-{{ forloop.index }}[data-pointer="bottom left"],
              #sp-{{ section.id }} .sp-item #sp-caption-{{ forloop.index }}[data-pointer="bottom right"] {
                padding: 0 0 {{ block.settings.pointer_length}}px 0;
              }

              @media only screen and (max-width: 800px) {
                #sp-{{ section.id }} .sp-item #sp-caption-{{ forloop.index }}[data-pointer="bottom left"],
                #sp-{{ section.id }} .sp-item #sp-caption-{{ forloop.index }}[data-pointer="bottom right"] {
                  padding: 0 0 {{ block.settings.mobile_pointer_length}}px 0;
                }
              }
         
              #sp-{{ section.id }} .sp-item #sp-caption-{{ forloop.index }}[data-pointer="top left"],
              #sp-{{ section.id }} .sp-item #sp-caption-{{ forloop.index }}[data-pointer="top right"] {
                padding: {{ block.settings.pointer_length}}px 0 0 0;
              }

              @media only screen and (max-width: 800px) {
                #sp-{{ section.id }} .sp-item #sp-caption-{{ forloop.index }}[data-pointer="top left"],
                #sp-{{ section.id }} .sp-item #sp-caption-{{ forloop.index }}[data-pointer="top right"] {
                  padding: {{ block.settings.mobile_pointer_length}}px 0 0 0;;
                }
              }
            
            </style>

            <div id="sp-caption-{{ forloop.index }}" class="sp-caption" style="{{ style_h }} {{ style_v }}" data-pointer="{{ block.settings.pointer_location }}">
              {% if block.settings.link %}
                <a href="{{ block.settings.link }}">
              {% endif %}
              {% if block.settings.text %}<p>{{ block.settings.text }}</p>{% endif %}

              {% if block.settings.link %}
                </a>
              {% endif %}
            </div>
          </div>
          <!-- /.sp-col -->

        {% endfor %}

      </div>
      <!-- /.sp-image -->
    </div>
    <!-- /.sp-image-wrapper -->

  </div>
  <!-- /.sp-grid -->
  
</div>
<!-- /.sp-container -->

</div>
<!-- /.sp-wrap -->



