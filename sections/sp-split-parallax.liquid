<style>

  {% if section.settings.override_fonts %}
  {{ section.settings.text_font | font_face }}
  {{ section.settings.headline_font | font_face }}
  {% endif %}

  {% assign short_id = section.id | slice: -3, 3 %}

  #sp-split-{{ section.id }}.sp-split-wrap p,
  #sp-split-{{ section.id }}.sp-split-wrap p a {
    font-size: {{ section.settings.text_size }}px;
    {% if section.settings.override_fonts %}
    font-family: {{ section.settings.text_font.family }}, {{ section.settings.text_font.fallback_families }};
    font-weight: {{ section.settings.text_font.weight }};
    {% endif %}
    {% if section.settings.text_line_height != 'inherit' %}line-height: {{ section.settings.text_line_height }};{% endif %}
    color: {{ section.settings.text_color }};
  }

  #sp-split-{{ section.id }}.sp-split-wrap p {
    color: {{ section.settings.text_color }};
    padding: 0;
    margin: 0 0 {{ section.settings.element_spacing }}px 0;
  }

  #sp-split-{{ section.id }}.sp-split-wrap h1,
  #sp-split-{{ section.id }}.sp-split-wrap h2,
  #sp-split-{{ section.id }}.sp-split-wrap h3,
  #sp-split-{{ section.id }}.sp-split-wrap h4,
  #sp-split-{{ section.id }}.sp-split-wrap h5 {
    font-size: {{ section.settings.headline_size }}px;
    {% if section.settings.override_fonts %}
    font-family: {{ section.settings.headline_font.family }}, {{ section.settings.headline_font.fallback_families }};
    font-weight: {{ section.settings.headline_font.weight }};
    {% endif %}
    {% if section.settings.headline_line_height != 'inherit' %}line-height: {{ section.settings.headline_line_height }};{% endif %}
    color: {{section.settings.headline_color}};
    padding: 0;
    margin: 0 0 {{ section.settings.element_spacing }}px 0;
  }

  #sp-split-{{ section.id }}.sp-split-wrap h2 {
    font-size: {{ section.settings.headline_size | minus:5 }}px;
  }

  #sp-split-{{ section.id }}.sp-split-wrap h3 {
    font-size: {{ section.settings.headline_size | minus:10 }}px;
  }

  #sp-split-{{ section.id }}.sp-split-wrap h4 {
    font-size: {{ section.settings.headline_size | minus:15 }}px;
  }

  #sp-split-{{ section.id }}.sp-split-wrap h5 {
    font-size: {{ section.settings.headline_size | minus:20 }}px;
  }

  #sp-split-{{ section.id }}.sp-split-wrap {
    box-sizing: border-box;
    background-image: {{section.settings.background_color}};
    width: 100%;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
  }

  #sp-split-{{ section.id }} .sp-split-grid {
    position: relative;
    margin: 0 auto;
    max-width: {{ section.settings.max_width }}px;
    min-height: {{ section.settings.height }}px;
  }

  #sp-split-{{ section.id }} .sp-split-grid-left .sp-split-column-content {
    grid-column: 1;
    grid-row: 1;
  }

  #sp-split-{{ section.id }} .sp-split-column-image {
    width: 100%;
    aspect-ratio: {{ section.settings.window_aspect_ratio }};
    border-radius: {{ section.settings.window_radius }}px ;
    position: relative;
    margin: 0 auto;
    max-width: {{ section.settings.max_width }}px;
    clip-path: border-box;
  }

  #sp-split-{{ section.id }} .sp-split-image {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    object-fit: cover;
    pointer-events: none;
  }

  @media only screen and (max-width: 900px) {
    #sp-split-{{ section.id }} .sp-split-image {
      width: 100vw;
      left: 0 !important;
    }
  }

  @media only screen and (max-width: 900px) {
    #sp-split-{{ section.id }} .sp-split-column-image {
      min-height: {{ section.settings.mobile_height }}px;
      margin: 0 0 {{ section.settings.grid_gap }}px 0;
    }
  }

  @supports (-webkit-touch-callout: none) {
    #sp-split-{{ section.id }} .sp-split-column-image {
      background-attachment: scroll;
    }
  }

  #sp-split-{{ section.id }} .sp-split-cover  {
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 2;
    width: 100%;
    height: 100%;
    background-image: {{ section.settings.cover_background }};
    opacity: {{ section.settings.cover_opacity }}%;
    border-radius: {{ section.settings.window_radius }}px;
  }
  
  #sp-split-{{ section.id }} .sp-split-grid-left .sp-split-column-image {
    grid-column: 2;
    grid-row: 1;
  }

  #sp-split-{{ section.id }} .sp-split-grid-right .sp-split-column-content {
    grid-column: 2;
    grid-row: 1;
  }
  
  #sp-split-{{ section.id }} .sp-split-grid-right .sp-split-column-image {
    grid-column: 1;
    grid-row: 1;
  }
  
  #sp-split-{{ section.id }} .sp-split-grid-right {
    display: grid;
    {% if section.settings.window_aspect_ratio == "21 / 9" %}
    grid-template-columns: 3fr 1fr;
    {% elsif section.settings.window_aspect_ratio == "16 / 9"%}
    grid-template-columns: 2fr 1fr;
    {% else %}
    grid-template-columns: 1fr 1fr;
    {% endif %}
    align-items: center;
    gap: {{ section.settings.grid_gap }}px;
  }

  #sp-split-{{ section.id }} .sp-split-grid-left {
    display: grid;
    {% if section.settings.window_aspect_ratio == "21 / 9" %}
    grid-template-columns: 1fr 3fr;
    {% elsif section.settings.window_aspect_ratio == "16 / 9"%}
    grid-template-columns: 1fr 2fr;
    {% else %}
    grid-template-columns: 1fr 1fr;
    {% endif %}
    align-items: center;
    gap: {{ section.settings.grid_gap }}px;
  }

  @media only screen and (max-width: 900px) {
    #sp-split-{{ section.id }} .sp-split-grid {
      display: block;
    }
  }

  @media only screen and (max-width: 900px) {
    #sp-split-{{ section.id }} .sp-split-column {
      padding: 5px 0;
    }
  }

  #sp-split-{{ section.id }} .sp-split-grid p:last-child {
    margin: 0 !important;
    padding: 0;
  }

</style>

<div id="sp-split-{{ section.id }}" class="sp-split-wrap" sp-wrap>
