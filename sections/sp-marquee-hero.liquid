          {% endif %}
        </div>
      </div>
      <!-- /.sp-col -->

    {% endfor %}

    {% for block in section.blocks %}
      <div class="sp-item">
        {% if block.type == 'video' %}
            {{
              block.settings.video
              | video_tag:
                image_size: '1100x',
                playsinline: block.settings.video_inline,
                autoplay: block.settings.video_autoplay,
                loop: block.settings.video_loop,
