    {% if section.settings.override_fonts %}
    font-family: {{ section.settings.text_font.family }}, {{ section.settings.text_font.fallback_families }};
    font-weight: {{ section.settings.text_font.weight }};
    {% endif %}
    {% if section.settings.text_line_height != 'inherit' %}line-height: {{ section.settings.text_line_height }};{% endif %}
  }

  #sp-testimonial-{{ section.id }}.sp-testimonial-wrap p {
    color: {{section.settings.text_color}};
    {% if section.settings.text_shadow %}text-shadow: 0 2px 4px rgba(0,0,0,0.25);{% endif %}
    padding: 0;
    margin: 0 0 {{ section.settings.element_spacing }}px 0;
  }

  #sp-testimonial-{{ section.id }}.sp-testimonial-wrap p.sp-citation {
    color: {{section.settings.citation_color}};
    {% if section.settings.text_shadow %}text-shadow: 0 2px 4px rgba(0,0,0,0.25);{% endif %}
    padding: 0;
    margin: 0 0 {{ section.settings.element_spacing }}px 0;
  }

  #sp-testimonial-{{ section.id }}.sp-testimonial-wrap p.sp-citation,
  #sp-testimonial-{{ section.id }}.sp-testimonial-wrap p.sp-citation a {
    font-size: {{ section.settings.citation_size }}px;
    {% if section.settings.override_fonts %}
    font-family: {{ section.settings.citation_font.family }}, {{ section.settings.citation_font.fallback_families }};
    font-weight: {{ section.settings.citation_font.weight }};
    {% endif %}
    {% if section.settings.citation_line_height != 'inherit' %}line-height: {{ section.settings.citation_line_height }};{% endif %}
  }

  #sp-testimonial-{{ section.id }}.sp-testimonial-wrap h1,
  #sp-testimonial-{{ section.id }}.sp-testimonial-wrap h2,
  #sp-testimonial-{{ section.id }}.sp-testimonial-wrap h3,
  #sp-testimonial-{{ section.id }}.sp-testimonial-wrap h4,
  #sp-testimonial-{{ section.id }}.sp-testimonial-wrap h5 {
    font-size: {{ section.settings.headline_size }}px;
    {% if section.settings.override_fonts %}
    font-family: {{ section.settings.headline_font.family }}, {{ section.settings.headline_font.fallback_families }};
    font-weight: {{ section.settings.headline_font.weight }};
    {% endif %}
    {% if section.settings.headline_line_height != 'inherit' %}line-height: {{ section.settings.headline_line_height }};{% endif %}
    color: {{section.settings.headline_color}};
    {% if section.settings.text_shadow %}text-shadow: 0 2px 4px rgba(0,0,0,0.25);{% endif %}
    padding: 0;
    margin: 0 0 {{ section.settings.element_spacing }}px 0;
  }
  

  #sp-testimonial-{{ section.id }}.sp-testimonial-wrap h2 {
    font-size: {{ section.settings.headline_size | minus:5 }}px;
  }

  #sp-testimonial-{{ section.id }}.sp-testimonial-wrap h3 {
    font-size: {{ section.settings.headline_size | minus:10 }}px;
  }

  #sp-testimonial-{{ section.id }}.sp-testimonial-wrap h4 {
    font-size: {{ section.settings.headline_size | minus:15 }}px;
  }

  #sp-testimonial-{{ section.id }}.sp-testimonial-wrap h5 {
    font-size: {{ section.settings.headline_size | minus:20 }}px;
  }

  #sp-testimonial-{{ section.id }}.sp-testimonial-wrap {
    background-image: {{ section.settings.background_color }};
    width: 100%;
  }
  
  #sp-testimonial-{{ section.id }} .sp-testimonial {
    position: relative;
    margin: 0 auto;
    max-width: {{ section.settings.max_width }}px;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
    clip-path: border-box;
  }

  @supports (-webkit-touch-callout: none) {
    #sp-testimonial-{{ section.id }} .sp-testimonial {
      background-attachment: scroll;
    }
  }

  #sp-testimonial-{{ section.id }} .sp-testimonial>.sp-testimonial-container {
    display: flex;
    align-items: center;
    justify-content: {{ section.settings.box_alignment }};
    position: relative;
    max-width: 1220px;
    margin: 0 auto;
    height: {{ section.settings.height }}px;
    z-index: 2;
  }

  @media only screen and (max-width: 800px) {
    #sp-testimonial-{{ section.id }} .sp-testimonial>.sp-testimonial-container {
      height: auto;
    }
  }

  #sp-testimonial-{{ section.id }} .sp-testimonial-image {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    object-fit: cover;
    pointer-events: none;
  }

  #sp-testimonial-{{ section.id }} .sp-testimonial>.sp-testimonial-cover {
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 2;
    width: 100%;
    height: 100%;
    background-image: {{section.settings.cover_background}};
    opacity: {{section.settings.cover_opacity}}%;
  }

