                      <polygon points="70.5 15 64.6221475 18.0901699 65.7447174 11.545085 60.9894348 6.90983006 67.5610737 5.95491503 70.5 0 73.4389263 5.95491503 80.0105652 6.90983006 75.2552826 11.545085 76.3778525 18.0901699"></polygon>
                      <polygon points="90.5 15 84.6221475 18.0901699 85.7447174 11.545085 80.9894348 6.90983006 87.5610737 5.95491503 90.5 0 93.4389263 5.95491503 100.010565 6.90983006 95.2552826 11.545085 96.3778525 18.0901699"></polygon>
                  </g>
              </g>
          </svg></p>
      {% endif %}

      {% if block.type == '@app' %}
        <div class="sp-testimonialp-app-block">
          {% render block %}
        </div>
      {% endif %}

      {% if block.type == 'headline' %}

        <style>
        #sp-testimonial-{{ section.id }} #sp-headline-{{ forloop.index }} {
          text-align: {{ block.settings.alignment }};
        }
        </style>
        
         <h1 id="sp-headline-{{ forloop.index }}">{{ block.settings.content }}</h1>
      {% endif %}

      {% if block.type == 'paragraph' %}

        <style>
        #sp-testimonial-{{ section.id }} #sp-paragraph-{{ forloop.index }} {
          text-align: {{ block.settings.alignment }};
        }
        </style>
        
         <p id="sp-paragraph-{{ forloop.index }}">{{ block.settings.content }}</p>
      {% endif %}

      {% if block.type == 'citation' %}

        <style>
        #sp-testimonial-{{ section.id }} #sp-citation-{{ forloop.index }}.sp-citation {
          text-align: {{ block.settings.alignment }};
        }

        #sp-testimonial-{{ section.id }} #sp-citation-{{ forloop.index }}.sp-citation cite{
          font-style: normal;
        }
        </style>
        
         <p id="sp-citation-{{ forloop.index }}" class="sp-citation"><cite>{{ block.settings.content }}</cite></p>
      {% endif %}

      {% if block.type == 'content' %}

        <style>
        #sp-testimonial-{{ section.id }} #sp-content-{{ forloop.index }} {
          text-align: {{ block.settings.alignment }};
        }
        </style>
        
         <{{ block.settings.tag }} id="sp-content-{{ forloop.index }}">{{ block.settings.content }}</{{ block.settings.tag }}>
      {% endif %}

      {% if block.type == 'richtext' %}
        <style>
        #sp-testimonial-{{ section.id }} #sp-content-{{ forloop.index }}, #sp-testimonial-{{ section.id }} #sp-content-{{ forloop.index }} * {
          text-align: {{ block.settings.alignment }};
        }
        </style>
        <div id="sp-content-{{ forloop.index }}">
        {{ block.settings.richtext }}
        </div>
      {% endif %}

      {% if block.type == 'button' %}
        <style>
          #sp-testimonial-button-{{ forloop.index }} .sp-testimonial-button {
            display: inline-block;
            padding: {{ block.settings.button_padding_tb }}px {{ block.settings.button_padding_lr }}px;
            background-image: {{ block.settings.button_background_color }};
            border-radius: {{ block.settings.button_border_radius }}px;
            color: {{ block.settings.button_text_color }};
            font-size: {{ block.settings.button_text_size }}px;
            text-decoration: none;
            cursor: pointer;
            text-shadow: none;
            transition: .25s all;
          }

          #sp-testimonial-button-{{ forloop.index }} .sp-testimonial-button * {
            color: {{ block.settings.button_text_color }};
          }
        </style>

        <p id="sp-testimonial-button-{{ forloop.index }}" style="text-align: {{ block.settings.alignment }};"><a class="sp-testimonial-button" href="{{ block.settings.cta_link }}">{{ block.settings.cta }}</a></p>
      {% endif %}

    {% endfor %}
  </div>
  </div>
</div>
