<style>
  
  #sp-sa-image-{{ section.id }}.sp-sa-image-wrap {
    background-image: {{ section.settings.background_color }};
    width: 100%;
  }
  

  #sp-sa-image-{{ section.id }} .sp-sa-image {
    position: relative;
    margin: 0 auto;
    max-width: 100%;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
  }

  #sp-sa-image-{{ section.id }} .sp-sa-image-container {
    display: grid;
    align-items: center;
    position: relative;
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    padding: 0;
  }

  #sp-sa-image-{{ section.id }} .sp-sa-image-container img {
    display: block;
    width: 100%;
    margin: 0;
    padding: 0;
    object-fit: cover;
    aspect-ratio: {{ section.settings.media_aspect_ratio }};
    border-radius: {{ section.settings.media_radius }}px;
    {% if section.settings.media_shadow %}box-shadow: 0 0 5px 0 rgba(0,0,0,0.20);{% endif %}  }

  @media only screen and (max-width: 800px) {
    #sp-sa-image-{{ section.id }} .sp-sa-image-container img {
      aspect-ratio: {{ section.settings.mobile_media_aspect_ratio }};
    }

  }
</style>

<div id="sp-sa-image-{{ section.id }}" class="sp-sa-image-wrap" sp-wrap>
  <div class="sp-sa-image" sp-container>
      
    <div class="sp-sa-image-container">
      {% assign mobile_image = section.settings.image %}

      {% if section.settings.mobile_image %}
        {% assign mobile_image = section.settings.mobile_image %}
      {% endif %}

      {% if section.settings.link %}<a href="{{ section.settings.link }}">{% endif %}
        {% if section.settings.image %}
          <picture>
            <source media="(max-width: 800px)" srcset="{{ mobile_image | image_url: width: section.settings.mobile_image_width }}" />
            <source media="(min-width: 801px)" srcset="{{ section.settings.image | image_url: width: section.settings.desktop_image_width }}" />
            <img src="{{ section.settings.image | image_url: width: desktop_image_width }}" />
          </picture>
        {% else %}
          <img src="data:image/svg+xml,%3C%3Fxml version='1.0' encoding='UTF-8'%3F%3E%3Csvg version='1.1' viewBox='0 0 500 250' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Crect x='2' y='2' width='496' height='496' fill='%23D8D8D8' stroke='%23D8D8D8' stroke-width='4'/%3E%3C/g%3E%3C/svg%3E">
        {% endif %}
      {% if section.settings.link %}</a>{% endif %}
    </div>

  </div>
</div>

