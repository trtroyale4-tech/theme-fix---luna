{%- style -%}

  {{  heading_font | font_face: font_display: 'swap' }}
  {{  sub_heading_font | font_face: font_display: 'swap' }}
  {{  text_font | font_face: font_display: 'swap' }}
  {{  author_font | font_face: font_display: 'swap' }}
  
  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }

  .testimonials-body-{{ section.id }} {
    background-color: {{ body_bg_color }};
    border: {{ body_border_thickness }}px solid {{ body_border_color }};
    border-radius: {{ body_radius }}px;
    padding: {{ body_padding_vertical_mobile }}px {{ body_padding_horizontal_mobile }}px;
  }

  .testimonials-heading-{{ section.id }} * {
    margin: 0;
    font-size: {{ heading_size_mobile }}px;
    color: {{ heading_color }};
    line-height: {{ heading_height }}%;
    text-transform: unset;
  }

  .testimonials-subheading-{{ section.id }} * {
    margin: 0;
    font-size: {{ sub_heading_size_mobile }}px;
    color: {{ sub_heading_color }};
    line-height: {{ sub_heading_height }}%;
    text-transform: unset;
    font-weight: 700;
  }

  .testimonials-slider-wrapper-{{ section.id }} {
    margin-top: {{ slider_mt | times: 0.75 | round: 0 }}px;
    position: relative;
  }

  .testimonials-slider-{{ section.id }} {
    border-radius: {{ image_radius }}px;
  }

  .testimonials-slider-{{ section.id }} .swiper-wrapper {
    align-items: stretch !important;
  }

  .testimonials-slide-{{ section.id }} {
    height: auto !important;
    display: flex !important;
    flex-direction: column;
  }

  .testimonials-content-{{ section.id }} {
    flex: 1 1 auto;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .testimonials-image-{{ section.id }} {
    border-radius: {{ image_radius }}px;
    border: {{ image_border_thickness }}px solid {{ image_border_color }};
    overflow: hidden;
    position: relative;
  }

  .testimonials-image-{{ section.id }} img,
  .testimonials-image-{{ section.id }} svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .testimonials-image-{{ section.id }} svg {
    background-color: #DADADA;
  }

  .testimonials-stars-{{ section.id }} {
    margin-top: {{ stars_mt | times: 0.75 | round: 0 }}px;
    display: flex;
    align-items: center;
    justify-content: {{ stars_align_mobile }};
    gap: 1px;
  }

  .testimonials-stars-{{ section.id }} svg,
  .testimonials-stars-{{ section.id }} img {
    display: block;
    width: {{ stars_size }}px;
    height: {{ stars_size }}px;
    object-fit: cover;
  }

  .testimonials-text-{{ section.id }} {
    text-align: {{ text_align_mobile }};
    margin-top: {{ text_mt | times: 0.75 | round: 0 }}px;
  }

  .testimonials-text-{{ section.id }} * {
    margin: 0;
    font-size: {{ text_size_mobile }}px;
    color: {{ text_color }};
    line-height: {{ text_height }}%;
    text-transform: unset;
    word-break: break-word;
  }

  .testimonials-author-{{ section.id }} {
    margin: 0;
    display: block;
    width: 100%;
    text-align: {{ author_align }};
    margin-top: {{ author_mt | times: 0.75 | round: 0 }}px;
    font-size: {{ author_size_mobile }}px;
    color: {{ author_color }};
    line-height: {{ author_height }}%;
    text-transform: unset;
    font-weight: 700;
    word-break: break-word;
  }

  .testimonials-btn-prev-{{ section.id }},
  .testimonials-btn-next-{{ section.id }} {
    position: absolute;
    z-index: 2;
    top: 45%;
    transform: translateY(-50%);
    width: {{ arrow_size_mobile }}px;
    height: {{ arrow_size_mobile }}px;
    border: {{ arrow_border_thickness }}px solid {{ arrow_border_color }};
    border-radius: 50%;
    background: transparent;
    background: {{ arrow_bg_color | hex_to_rgba: 0.8 }};
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease 0s;
    cursor: pointer;
    -webkit-appearance: none;
    padding: 0px;
  }

  .testimonials-btn-prev-{{ section.id }} {
    left: {{ arrow_size_mobile | times: 0.25 }}px !important;
  }

  .testimonials-btn-next-{{ section.id }} {
    right: {{ arrow_size_mobile | times: 0.25 }}px !important;
  }

  .testimonials-btn-prev-{{ section.id }} svg,
  .testimonials-btn-next-{{ section.id }} svg {
    height: {{ arrow_icon_size_mobile }}px;
    flex: 0 0 {{ arrow_icon_size_mobile }}px;
  }

  .testimonials-btn-next-{{ section.id }} svg {
    transform: rotate(180deg);
    margin-left: 2px;
  }

  .testimonials-btn-prev-{{ section.id }} svg {
    margin-left: -2px;
  }

  .testimonials-btn-prev-{{ section.id }} svg path,
  .testimonials-btn-next-{{ section.id }} svg path {
    fill: {{ arrow_color }};
    transition: all 0.3s ease 0s;
  }

  .testimonials-btn-prev-{{ section.id }}:hover ,
  .testimonials-btn-next-{{ section.id }}:hover {
    transition: all 0.3s ease 0s;
    border: {{ arrow_border_thickness }}px solid {{ arrow_border_hover_color }};
    background: {{ arrow_bg_hover_color }};
  }

  .testimonials-btn-prev-{{ section.id }}:hover svg path,
  .testimonials-btn-next-{{ section.id }}:hover svg path {
    fill: {{ arrow_hover_color }};
    transition: all 0.3s ease 0s;
  }

  .testimonials-btn-prev-{{ section.id }}.swiper-button-disabled,
  .testimonials-btn-next-{{ section.id }}.swiper-button-disabled {
    opacity: 0.3;
  }

  .testimonials-pagination-{{ section.id }} {
    padding-top: {{ dots_mt }}px;
    position: static !important;
    width: 100%;
    justify-content: center;
    align-items: center;
  }

  .testimonials-pagination-{{ section.id }} .swiper-pagination-bullet {
    width: {{ dots_size_mobile }}px;
    height: {{ dots_size_mobile }}px;
    background-color: {{ dots_color }} !important;
    transform: scale(0.7);
    transition: all 0.25s ease 0s;
    opacity: 1 !important;
  }

  .testimonials-pagination-{{ section.id }} .swiper-pagination-bullet.swiper-pagination-bullet-active {
    transform: scale(1);
    transition: all 0.25s ease 0s;
  }
  
  @media(min-width: 1024px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
    }
    
    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }

    .testimonials-body-{{ section.id }} {
      padding: {{ body_padding_vertical }}px {{ body_padding_horizontal }}px;
    }

    .testimonials-heading-{{ section.id }} * {
      font-size: {{ heading_size }}px;
    }

    .testimonials-subheading-{{ section.id }} * {
      font-size: {{ sub_heading_size }}px;
    }

    .testimonials-stars-{{ section.id }} {
      margin-top: {{ stars_mt }}px;
      justify-content: {{ stars_align }};
    }

    .testimonials-slider-wrapper-{{ section.id }} {
      margin-top: {{ slider_mt }}px;
    }

    .testimonials-text-{{ section.id }} {
      margin-top: {{ text_mt }}px;
      text-align: {{ text_align }};
    }

    .testimonials-text-{{ section.id }} * {
      font-size: {{ text_size }}px;
    }

    .testimonials-author-{{ section.id }} {
      margin-top: {{ author_mt }}px;
      font-size: {{ author_size }}px;
      text-align: {{ author_align }};
    }

    .testimonials-btn-prev-{{ section.id }},
    .testimonials-btn-next-{{ section.id }} {
      width: {{ arrow_size | times: 0.85 }}px;
      height: {{ arrow_size | times: 0.85 }}px;
    }

    .testimonials-btn-prev-{{ section.id }} {
      left: {{ arrow_size | times: 0.25 }}px !important;
    }
  
    .testimonials-btn-next-{{ section.id }} {
      right: {{ arrow_size | times: 0.25 }}px !important;
    }

    .testimonials-btn-prev-{{ section.id }} svg,
    .testimonials-btn-next-{{ section.id }} svg {
      height: {{ arrow_icon_size | times: 0.85 }}px;
      flex: 0 0 {{ arrow_icon_size | times: 0.85 }}px;
    }

    .testimonials-pagination-{{ section.id }} .swiper-pagination-bullet {
      width: {{ dots_size }}px;
      height: {{ dots_size }}px;
    }
  }

  @media(min-width: 1440px) {
    .testimonials-btn-prev-{{ section.id }},
    .testimonials-btn-next-{{ section.id }} {
      width: {{ arrow_size }}px;
      height: {{ arrow_size }}px;
    }

    .testimonials-btn-prev-{{ section.id }} svg,
    .testimonials-btn-next-{{ section.id }} svg {
      height: {{ arrow_icon_size }}px;
      flex: 0 0 {{ arrow_icon_size }}px;
    }
  }
  
