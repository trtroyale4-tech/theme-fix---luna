<style>

  {% if section.settings.override_fonts %}
    {{ section.settings.text_font | font_face }}
    {{ section.settings.headline_font | font_face }}
  {% endif %}

  #sp-hero-{{ section.id }}.sp-hero-wrap p, #sp-hero-{{ section.id }}.sp-hero-wrap li {
    font-size: {{ section.settings.text_size }}px;
    {% if section.settings.override_fonts %}
      font-family: {{ section.settings.text_font.family }}, {{ section.settings.text_font.fallback_families }};
      font-weight: {{ section.settings.text_font.weight }};
    {% endif %}
    {% if section.settings.text_line_height != 'inherit' %}line-height: {{ section.settings.text_line_height }};{% endif %}
    color: {{section.settings.text_color}};
    margin: 0 0 {{ section.settings.element_spacing }}px 0;
    padding: 0;
    {% if section.settings.text_shadow %}text-shadow: 0 2px 4px rgba(0,0,0,0.25);{% endif %}
    text-align: {{section.settings.text_alignment}};
  }

  #sp-hero-{{ section.id }}.sp-hero-wrap ul {
    list-style-position: inside;
  }


  #sp-hero-{{ section.id }}.sp-hero-wrap h1,
  #sp-hero-{{ section.id }}.sp-hero-wrap h2,
  #sp-hero-{{ section.id }}.sp-hero-wrap h3,
  #sp-hero-{{ section.id }}.sp-hero-wrap h4,
  #sp-hero-{{ section.id }}.sp-hero-wrap h5 {
    font-size: {{ section.settings.headline_size }}px;
    {% if section.settings.override_fonts %}
    font-family: {{ section.settings.headline_font.family }}, {{ section.settings.headline_font.fallback_families }};
    font-weight: {{ section.settings.headline_font.weight }};
    {% endif %}
    {% if section.settings.headline_line_height != 'inherit' %}line-height: {{ section.settings.headline_line_height }};{% endif %}
    color: {{section.settings.headline_color}};
    {% if section.settings.text_shadow %}text-shadow: 0 2px 4px rgba(0,0,0,0.25);{% endif %}
    padding: 0;
    margin: 0 0 {{ section.settings.element_spacing }}px 0;
    color: {{section.settings.headline_color}};
    text-align: {{section.settings.text_alignment}};
  }
  

  #sp-hero-{{ section.id }}.sp-hero-wrap h2 {
    font-size: {{ section.settings.headline_size | minus:5 }}px;
  }

  #sp-hero-{{ section.id }}.sp-hero-wrap h3 {
    font-size: {{ section.settings.headline_size | minus:10 }}px;
  }

  #sp-hero-{{ section.id }}.sp-hero-wrap h4 {
    font-size: {{ section.settings.headline_size | minus:15 }}px;
  }

  #sp-hero-{{ section.id }}.sp-hero-wrap h5 {
    font-size: {{ section.settings.headline_size | minus:20 }}px;
  }
  
  #sp-hero-{{ section.id }}.sp-hero-wrap {
    background-image: {{ section.settings.background_color }};
    width: 100%;
  }

  #sp-hero-{{ section.id }} .sp-hero {
    position: relative;
    margin: 0 auto;
    max-width: {{ section.settings.max_width }}px;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
  }

  #sp-hero-{{ section.id }} .sp-hero>.sp-hero-container {
    display: flex;
    align-items: center;
    justify-content: {{ section.settings.box_alignment }};
    position: relative;
    max-width: 1220px;
    margin: 0 auto;
    padding: 100px 10px 100px 10px;
    z-index: 2;
  }

  #sp-hero-{{ section.id }} .sp-hero-image {
    position: absolute;
    z-index: 2;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  #sp-hero-{{ section.id }} .sp-hero>.sp-hero-cover {
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 2;
    width: 100%;
    height: 100%;
    background-image: {{section.settings.cover_background}};
    opacity: {{section.settings.cover_opacity}}%;
  }

  #sp-hero-{{ section.id }} .sp-hero-content {
    padding: 0 25px 0 25px;
    max-width: 60%;
  }

  @media only screen and (max-width: 800px) {
    #sp-hero-{{ section.id }} .sp-hero-content {
      padding: 0 10px 0 10px;
      max-width: calc(100% - 20px);
    }
  }

  #sp-hero-{{ section.id }} .sp-hero p:last-child {
    margin-bottom: 0;
  }

  #sp-hero-{{ section.id }} .sp-hero a.sp-hero-cta {
    display: inline-block;
    padding: 15px 40px;
    padding: {{ section.settings.button_padding_tb }}px {{ section.settings.button_padding_lr }}px;
    background-image: {{section.settings.button_background_color}};
    border-radius: {{ section.settings.button_border_radius }}px;
    color: {{section.settings.button_text_color}};
    font-size: {{ section.settings.text_size }}px;
    text-decoration: none;
    cursor: pointer;
    text-shadow: none;
    transition: .25s all;
  }

  #sp-hero-{{ section.id }} .sp-hero a.sp-hero-cta:hover {
    transform: translateY(-2px);
  }

  @media only screen and (max-width: 800px) {

  }
</style>

<div id="sp-hero-{{ section.id }}" class="sp-hero-wrap" sp-wrap>
<div class="sp-hero" sp-container>
  {% if section.settings.hero_image %}
  <img class="sp-hero-image" 
    src="{{ section.settings.hero_image | image_url: width: 600 }}"
    srcset="{{ section.settings.hero_image| image_url: width: 600 }} 600w,
      {{ section.settings.hero_image | image_url: width: 800 }} 800w,
      {{ section.settings.hero_image | image_url: width: 1000 }} 1000w,
      {{ section.settings.hero_image | image_url: width: 1100 }} 1100w">
  {% endif %}
  <div class="sp-hero-cover"></div>
  <div class="sp-hero-container" sp-column>
    <div class="sp-hero-content">
      {% if section.settings.headline != "" %}<h2>{{ section.settings.headline }}</h2>{% endif %}
      {% if section.settings.content != "" %}{{ section.settings.content }}{% endif %}
      {% if section.settings.cta != "" %}<p><a class="sp-hero-cta" href="{{ section.settings.cta_link }}">{{ section.settings.cta }}</a></p>{% endif %}
    </div>
  </div>
</div>
</div>

