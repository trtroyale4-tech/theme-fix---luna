<style>
  {% if section.settings.override_fonts %}
  {{ section.settings.text_font | font_face }}
  {{ section.settings.headline_font | font_face }}
  {% endif %}

  #sp-{{ section.id }} p,
  #sp-{{ section.id }} p li {
    font-size: {{ section.settings.text_size }}px;
    {% if section.settings.override_fonts %}
    font-family: {{ section.settings.text_font.family }}, {{ section.settings.text_font.fallback_families }};
    font-weight: {{ section.settings.text_font.weight }};
    {% endif %}
    {% if section.settings.text_line_height != 'inherit' %}line-height: {{ section.settings.text_line_height }};{% endif %}
  }

  #sp-{{ section.id }} p {
    color: {{section.settings.text_color}};
    {% if section.settings.text_shadow %}text-shadow: 0 2px 4px rgba(0,0,0,0.25);{% endif %}
    padding: 0;
    margin: 0 0 {{ section.settings.element_spacing }}px 0;
  }

  @media (max-width: 800px) {
    #sp-{{ section.id }} p,
    #sp-{{ section.id }} li {
      font-size: {{ section.settings.mobile_text_size }}px;
    }
  }

  #sp-{{ section.id }} h1,
  #sp-{{ section.id }} h2,
  #sp-{{ section.id }} h3,
  #sp-{{ section.id }} h4,
  #sp-{{ section.id }} h5 {
    font-size: {{ section.settings.headline_size }}px;
    {% if section.settings.override_fonts %}
    font-family: {{ section.settings.headline_font.family }}, {{ section.settings.headline_font.fallback_families }};
    font-weight: {{ section.settings.headline_font.weight }};
    {% endif %}
    {% if section.settings.headline_line_height != 'inherit' %}line-height: {{ section.settings.headline_line_height }};{% endif %}
    color: {{section.settings.headline_color}};
    {% if section.settings.text_shadow %}text-shadow: 0 2px 4px rgba(0,0,0,0.25);{% endif %}
    padding: 0;
    margin: 0 0 {{ section.settings.element_spacing }}px 0;
  }

  @media (max-width: 800px) {
    #sp-{{ section.id }} h1,
    #sp-{{ section.id }} h2,
    #sp-{{ section.id }} h3,
    #sp-{{ section.id }} h4,
    #sp-{{ section.id }} h5 {
      font-size: {{ section.settings.mobile_headline_size }}px;
    }
  }

  #sp-{{ section.id }} h2 {
    font-size: {{ section.settings.headline_size | minus:5 }}px;
  }

  #sp-{{ section.id }} h3 {
    font-size: {{ section.settings.headline_size | minus:10 }}px;
  }

  #sp-{{ section.id }} h4 {
    font-size: {{ section.settings.headline_size | minus:15 }}px;
  }

  #sp-{{ section.id }} h5 {
    font-size: {{ section.settings.headline_size | minus:20 }}px;
  }

  @media (max-width: 800px) {
    #sp-{{ section.id }} h2 {
      font-size: {{ section.settings.mobile_headline_size | minus:5 }}px;
    }
    
  
    #sp-{{ section.id }} h3 {
      font-size: {{ section.settings.mobile_headline_size | minus:10 }}px;
    }
  
    #sp-{{ section.id }} h4 {
      font-size: {{ section.settings.mobile_headline_size | minus:15 }}px;
    }
  
    #sp-{{ section.id }} h5 {
      font-size: {{ section.settings.mobile_headline_size | minus:20 }}px;
    }

  }

  #sp-{{ section.id }} {
    background-image: {{ section.settings.background_color }};
    width: 100%;
  }

  #sp-{{ section.id }} .sp-hero {
    position: relative;
    margin: 0 auto;
    max-width: {{ section.settings.max_width }}px;
    height: {{ section.settings.height }}px;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
    clip-path: border-box;
  }

  @media only screen and (max-width: 800px) {
    #sp-{{ section.id }} .sp-hero {
      height: auto;
    }
  }

  #sp-{{ section.id }} .sp-image {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    object-fit: cover;
    pointer-events: none;
  }


  #sp-{{ section.id }} .sp-hero>.sp-container {
    display: flex;
    align-items: center;
    justify-content: {{ section.settings.box_alignment }};
    position: relative;
    max-width: 1220px;
    margin: 0 auto;
    padding: 100px 10px 100px 10px;
    z-index: 2;
  }

  #sp-{{ section.id }} .sp-hero>.sp-cover {
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 2;
    width: 100%;
    height: 100%;
    background-image: {{section.settings.cover_background}};
    opacity: {{section.settings.cover_opacity}}%;
  }

  #sp-{{ section.id }} .sp-content {
    padding: 0 25px 0 25px;
    max-width: 60%;
  }

  @media only screen and (max-width: 800px) {
    #sp-{{ section.id }} .sp-content {
      padding: 0 10px 0 10px;
      max-width: calc(100% - 20px);
    }
  }

  #sp-{{ section.id }} .sp-hero p:last-child {
    margin-bottom: 0;
  }

  #sp-{{ section.id }} .sp-hero a.sp-cta:hover {
    transform: translateY(-2px);
  }

  @media only screen and (max-width: 800px) {

  }
</style>

<div id="sp-{{ section.id }}" class="sp-section" sp-section>
  <div class="sp-hero" sp-container>
    {% if section.settings.image %}
      <img
        class="sp-image"
        src="{{ section.settings.image | image_url: width: 600 }}"
        srcset="
          {{ section.settings.image| image_url: width: 600 }} 600w,
          {{ section.settings.image | image_url: width: 800 }} 800w,
          {{ section.settings.image | image_url: width: 1000 }} 1000w,
          {{ section.settings.image | image_url: width: 1100 }} 1100w
        "
      >
    {% endif %}
    <div class="sp-cover"></div>
    <div class="sp-container">
      <div class="sp-content" sp-column>
        {% for block in section.blocks %}
          {% if block.type == 'five_star' %}
            <style>
              #sp-star-{{ forloop.index }} {
                text-align: {{ block.settings.alignment }};
              }

              #sp-star-{{ forloop.index }} svg,
              #sp-star-{{ forloop.index }} svg * {
                fill: {{ block.settings.color }};
              }
            </style>

            <p id="sp-star-{{ forloop.index }}">
              <svg
                width="101px"
                height="20px"
                viewBox="0 0 101 20"
                version="1.1"
                xmlns="http://www.w3.org/2000/svg"
                xmlns:xlink="http://www.w3.org/1999/xlink"
              >
                <title>5 Stars</title>
                <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                    <g id="Group-5">
                        <polygon points="10 15 4.12214748 18.0901699 5.24471742 11.545085 0.489434837 6.90983006 7.06107374 5.95491503 10 0 12.9389263 5.95491503 19.5105652 6.90983006 14.7552826 11.545085 15.8778525 18.0901699"></polygon>
                        <polygon points="30.5 15 24.6221475 18.0901699 25.7447174 11.545085 20.9894348 6.90983006 27.5610737 5.95491503 30.5 0 33.4389263 5.95491503 40.0105652 6.90983006 35.2552826 11.545085 36.3778525 18.0901699"></polygon>
                        <polygon points="50 15 44.1221475 18.0901699 45.2447174 11.545085 40.4894348 6.90983006 47.0610737 5.95491503 50 0 52.9389263 5.95491503 59.5105652 6.90983006 54.7552826 11.545085 55.8778525 18.0901699"></polygon>
                        <polygon points="70.5 15 64.6221475 18.0901699 65.7447174 11.545085 60.9894348 6.90983006 67.5610737 5.95491503 70.5 0 73.4389263 5.95491503 80.0105652 6.90983006 75.2552826 11.545085 76.3778525 18.0901699"></polygon>
                        <polygon points="90.5 15 84.6221475 18.0901699 85.7447174 11.545085 80.9894348 6.90983006 87.5610737 5.95491503 90.5 0 93.4389263 5.95491503 100.010565 6.90983006 95.2552826 11.545085 96.3778525 18.0901699"></polygon>
                    </g>
                </g>
              </svg>
            </p>
          {% endif %}

          {% if block.type == '@app' %}
            <div class="sp-herop-app-block">
              {% render block %}
            </div>
          {% endif %}

          {% if block.type == 'headline' %}
            <style>
              #sp-{{ section.id }} #sp-headline-{{ forloop.index }} {
                text-align: {{ block.settings.alignment }};
              }
            </style>

            <h1 id="sp-headline-{{ forloop.index }}">{{ block.settings.content }}</h1>
          {% endif %}

          {% if block.type == 'paragraph' %}
            <style>
              #sp-{{ section.id }} #sp-paragraph-{{ forloop.index }} {
                text-align: {{ block.settings.alignment }};
              }
            </style>

            <p id="sp-paragraph-{{ forloop.index }}">{{ block.settings.content }}</p>
          {% endif %}

          {% if block.type == 'content' %}
            <style>
              #sp-{{ section.id }} #sp-content-{{ forloop.index }} {
                text-align: {{ block.settings.alignment }};
              }
            </style>

            <{{ block.settings.tag }} id="sp-content-{{ forloop.index }}">
              {{- block.settings.content -}}
            </{{ block.settings.tag }}>
          {% endif %}

          {% if block.type == 'richtext' %}
            <style>
              #sp-{{ section.id }} #sp-content-{{ forloop.index }}, #sp-{{ section.id }} #sp-content-{{ forloop.index }} * {
                text-align: {{ block.settings.alignment }};
              }
            </style>
            <div id="sp-content-{{ forloop.index }}">
              {{ block.settings.richtext }}
            </div>
          {% endif %}

          {% if block.type == 'button' %}
            <style>
              #sp-button-{{ forloop.index }} .sp-button {
                display: inline-block;
                padding: {{ block.settings.button_padding_tb }}px {{ block.settings.button_padding_lr }}px;
                background-image: {{ block.settings.button_background_color }};
                border-radius: {{ block.settings.button_border_radius }}px;
                color: {{ block.settings.button_text_color }};
                font-size: {{ block.settings.button_text_size }}px;
                text-decoration: none;
                cursor: pointer;
                text-shadow: none;
                transition: .25s all;
              }

              #sp-button-{{ forloop.index }} .sp-button * {
                color: {{ block.settings.button_text_color }};
              }
            </style>

            <p id="sp-button-{{ forloop.index }}" style="text-align: {{ block.settings.alignment }};">
              <a class="sp-button" href="{{ block.settings.cta_link }}">{{ block.settings.cta }}</a>
            </p>
          {% endif %}
        {% endfor %}
      </div>
      <!-- /sp-content -->

    </div>
    <!-- /sp-container -->

  </div>
  <!-- /sp-hero -->
    
</div>
<!-- /sp-section -->

